<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/button_round_border"
    android:backgroundTint="@color/disable_button_background"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/groupView"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_marginBottom="00dp"
        android:background="@drawable/group_bg"
        android:backgroundTint="#FAD61D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="end"
        android:padding="5dp"
        android:textColor="@color/sub_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/groupView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="end"
        android:paddingHorizontal="3dp"
        android:textColor="@color/main_text"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/postQuestion"
        app:layout_constraintStart_toStartOf="@+id/postQuestion"
        app:layout_constraintTop_toBottomOf="@+id/postQuestion" />

</androidx.constraintlayout.widget.ConstraintLayout>